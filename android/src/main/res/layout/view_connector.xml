<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/region_primary_light"
    android:orientation="vertical"
    android:paddingBottom="@dimen/view_vertical_padding"
    android:paddingLeft="@dimen/view_horizontal_padding"
    android:paddingRight="@dimen/view_horizontal_padding"
    android:paddingTop="@dimen/view_vertical_padding">

    <TextView
        android:id="@+id/text_connect_title"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_vertical_padding"
        android:text="@string/title_connect_to_master_service" />

    <TextView
        android:id="@+id/text_connect_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_vertical_margin"
        android:text="@string/text_connect_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/field_address"
            style="@style/Widget.AppCompat.EditText"
            android:nextFocusDown="@+id/field_port"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/label_domain_ip"
            android:inputType="textUri"
            android:lines="1"
            android:maxLength="255"
            android:maxLines="1" />

        <EditText
            android:id="@+id/field_port"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_port"
            android:inputType="number"
            android:lines="1"
            android:maxLength="5"
            android:maxLines="1" />

        <Button
            android:id="@+id/button_connect"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_vertical_padding"
            android:layout_marginStart="@dimen/view_vertical_padding"
            android:text="@string/action_connect" />

    </LinearLayout>

</LinearLayout>